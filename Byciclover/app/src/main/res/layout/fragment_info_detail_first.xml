<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <!--Q1-->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    android:background="@color/byciclover_soft_gray">
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/byciclover_soft_gray">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_q1"
        android:textColor="@color/byciclover_purple"
        android:textSize="17.33dp"
        fontPath="fonts/NotoSansCJKkr-Medium.otf" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_q1_string"
        android:textColor="@color/byciclover_black"
        android:textSize="17.33dp" />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="112.67dp"
    android:layout_marginStart="51dp"
    android:layout_marginEnd="51dp"
    android:paddingBottom="36dp">
    <RelativeLayout
      android:layout_height="45.33dp"
      android:layout_width="wrap_content"
      android:layout_gravity="bottom"
      android:paddingEnd="28dp">
      <LinearLayout android:id="@+id/fragment_info_detail_first_boy_button"
        android:layout_height="39.33dp"
        android:layout_width="109dp"
        android:layout_marginStart="11.67dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle_full_rounded"
        android:orientation="horizontal">
        <TextView android:id="@+id/fragment_info_detail_first_boy_button_text"
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          android:gravity="center"
          android:text="@string/detail_info_male"
          android:textSize="15.33dp"
          android:textColor="@color/byciclover_sub_text"
          fontPath="fonts/NotoSansCJKkr-Bold.otf" />
      </LinearLayout>
      <ImageView
        android:layout_height="45.33dp"
        android:layout_width="31dp"
        android:background="@drawable/boy_illustration" />
    </RelativeLayout>
    <RelativeLayout
      android:layout_height="45.33dp"
      android:layout_width="wrap_content"
      android:layout_gravity="bottom">
      <LinearLayout android:id="@+id/fragment_info_detail_first_girl_button"
        android:layout_height="39.33dp"
        android:layout_width="109dp"
        android:layout_marginEnd="11.67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rectangle_full_rounded"
        android:orientation="horizontal">
        <TextView android:id="@+id/fragment_info_detail_first_girl_button_text"
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          android:gravity="center"
          android:text="@string/detail_info_female"
          android:textSize="15.33dp"
          android:textColor="@color/byciclover_sub_text"
          fontPath="fonts/NotoSansCJKkr-Bold.otf" />
      </LinearLayout>
      <ImageView
        android:layout_height="45.33dp"
        android:layout_width="41dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/girl_illustration" />
    </RelativeLayout>
  </LinearLayout>

  <!--Q2-->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    android:background="@color/byciclover_soft_gray">
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/byciclover_soft_gray">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_q2"
        android:textColor="@color/byciclover_purple"
        android:textSize="17.33dp"
        fontPath="fonts/NotoSansCJKkr-Medium.otf" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_q2_string"
        android:textColor="@color/byciclover_black"
        android:textSize="17.33dp" />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="113dp"
    android:paddingTop="30.33dp">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout android:id="@+id/fragment_info_detail_first_line"
        android:layout_width="230dp"
        android:layout_height="1dp"
        android:layout_marginTop="47.67dp"
        android:layout_centerInParent="true"
        android:background="@color/byciclover_gray"
        android:orientation="horizontal"/>
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
        <ImageView
          android:id="@+id/fragment_info_detail_teens"
          android:layout_height="35dp"
          android:layout_width="35dp"
          android:layout_marginRight="39.33dp"
          android:layout_marginEnd="39.33dp"
          android:paddingTop="8.67dp"
          android:paddingEnd="8.67dp"
          android:paddingBottom="8.67dp"
          android:paddingStart="8.67dp"
          android:src="@drawable/circle_gray_stroke" />
        <ImageView
          android:id="@+id/fragment_info_detail_twenties"
          android:layout_height="35dp"
          android:layout_width="35dp"
          android:layout_marginRight="39.33dp"
          android:layout_marginEnd="39.33dp"
          android:paddingTop="8.67dp"
          android:paddingEnd="8.67dp"
          android:paddingBottom="8.67dp"
          android:paddingStart="8.67dp"
          android:src="@drawable/circle_gray_stroke" />
        <ImageView
          android:id="@+id/fragment_info_detail_thirties"
          android:layout_height="35dp"
          android:layout_width="35dp"
          android:layout_marginRight="39.33dp"
          android:layout_marginEnd="39.33dp"
          android:paddingTop="8.67dp"
          android:paddingEnd="8.67dp"
          android:paddingBottom="8.67dp"
          android:paddingStart="8.67dp"
          android:src="@drawable/circle_gray_stroke" />
        <ImageView
          android:id="@+id/fragment_info_detail_forties"
          android:layout_height="35dp"
          android:layout_width="35dp"
          android:paddingTop="8.67dp"
          android:paddingEnd="8.67dp"
          android:paddingBottom="8.67dp"
          android:paddingStart="8.67dp"
          android:src="@drawable/circle_gray_stroke" />
      </LinearLayout>
    </RelativeLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="48.33dp"
        android:layout_marginEnd="48.33dp"
        android:text="@string/detail_info_teens"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="48.33dp"
        android:layout_marginEnd="48.33dp"
        android:text="@string/detail_info_twenties"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="48.33dp"
        android:layout_marginEnd="48.33dp"
        android:text="@string/detail_info_thirties"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_forties"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
    </LinearLayout>
  </LinearLayout>

  <!--Q3-->
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center"
    android:background="@color/byciclover_soft_gray">
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/byciclover_soft_gray">
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_q3"
        android:textColor="@color/byciclover_purple"
        android:textSize="17.33dp"
        fontPath="fonts/NotoSansCJKkr-Medium.otf" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_info_q3_string"
        android:textColor="@color/byciclover_black"
        android:textSize="17.33dp" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:paddingTop="26.33dp"
    android:paddingStart="50.67dp">
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginEnd="37.33dp"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/fragment_info_detail_alone"
        android:layout_height="61.33dp"
        android:layout_width="61.33dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10.67dp"
        android:src="@drawable/alone_icon_gray"
        android:background="@drawable/circle_gray_stroke" />
      <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/detail_info_alone"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        android:textAlignment="center"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
    </LinearLayout>
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_marginEnd="37.33dp"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/fragment_info_detail_couple"
        android:layout_height="61.33dp"
        android:layout_width="61.33dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10.67dp"
        android:src="@drawable/couple_icon_gray"
        android:background="@drawable/circle_gray_stroke" />
      <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/detail_info_couple"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        android:textAlignment="center"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
    </LinearLayout>
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:orientation="vertical">
      <ImageView
        android:id="@+id/fragment_info_detail_friend"
        android:layout_height="61.33dp"
        android:layout_width="61.33dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="11.5dp"
        android:paddingBottom="11.5dp"
        android:layout_marginBottom="10.67dp"
        android:src="@drawable/friend_icon_gray"
        android:background="@drawable/circle_gray_stroke" />
      <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/detail_info_friend"
        android:textSize="13.33dp"
        android:textColor="@color/byciclover_sub_text"
        android:textAlignment="center"
        fontPath="fonts/NotoSansCJKkr-Bold.otf"/>
    </LinearLayout>
  </LinearLayout>

</LinearLayout>